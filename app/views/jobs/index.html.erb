<div class="container">
  <div class="row">
    <h1>Les derni√®res offres d'emplois</h1>
    <div class="col-xs-12 col-md-8">
      <% @jobs.each do |job| %>
        <div class="job-tile">
          <div class="job-header">
            <h2><%= link_to job.title.capitalize, job %><small>, chez <%= job.company.downcase %></small></h2>
            <div class="pull-right label <%= render "jobcategory", category: job.category %>">
              <%= job.category %>
            </div>
            <i class="fa fa-location-arrow"></i> <%= job.city %>
          </div>
          <div class="job-description">
            <%= truncate(job.description, length: 200) %>
          </div>
          <div class="job-seperator"></div>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-md-4">
      <div style="background:black;height:600px;"></div>
    </div>
  </div>
</div>